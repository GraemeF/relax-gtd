<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:RelaxPrototypeScreens" x:Name="CollectScreen"
	x:Class="RelaxPrototypeScreens.Screen_1">

	<DockPanel x:Name="LayoutRoot" Background="White">
		<Button Style="{DynamicResource Button-Sketch}" Content="Add" DockPanel.Dock="Right"/>
		<TextBox MinHeight="80" MinWidth="500" Style="{DynamicResource TextBox-Sketch}" Text="Type new task in here" TextWrapping="Wrap" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
	</DockPanel>
</UserControl>