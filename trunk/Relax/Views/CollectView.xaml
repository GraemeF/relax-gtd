<UserControl x:Class="Relax.Views.CollectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="clr-namespace:Caliburn.PresentationFramework.ApplicationModel;assembly=Caliburn.PresentationFramework">
    <DockPanel>
        <ContentControl cal:View.Model="{Binding Input}"
                        DockPanel.Dock="Top" />
        <ContentControl cal:View.Model="{Binding Actions}"
                        DockPanel.Dock="Bottom" />
    </DockPanel>
</UserControl>
