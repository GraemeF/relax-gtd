<UserControl x:Class="Relax.Views.InputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cm="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework"
             AutomationProperties.AutomationId="Input">
    <StackPanel Orientation="Horizontal">
        <TextBox MinWidth="600"
                 Text="{Binding Action.Title, UpdateSourceTrigger=PropertyChanged}"
                 AutomationProperties.AutomationId="Title" />
        <Button Content="Add"
                Padding="10"
                cm:Message.Attach="[Event Click] = [Action Add]"
                IsDefault="True"
                AutomationProperties.AutomationId="Add" />
        <Button Content="Cancel"
                Padding="10"
                cm:Message.Attach="[Event Click] = [Action Shutdown]"
                IsCancel="True"
                Visibility="Visible"
                AutomationProperties.AutomationId="Cancel" />
    </StackPanel>
</UserControl>
