<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="clr-namespace:Caliburn.PresentationFramework.ApplicationModel;assembly=Caliburn.PresentationFramework"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Relax.Views.ProcessView"
             AutomationProperties.AutomationId="Process"
             mc:Ignorable="d"
             d:DesignWidth="635.139"
             d:DesignHeight="414.84">
    <DockPanel>
        <ContentControl x:Name="ActionsContent"
                        Margin="10,0,10,0"
                        cal:View.Model="{Binding Inbox}"
                        DockPanel.Dock="Top" />
        <ContentControl cal:View.Model="{Binding ProcessAction}"
                        DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>