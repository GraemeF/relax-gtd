<UserControl x:Class="Relax.Views.CollectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:Caliburn.PresentationFramework.Views;assembly=Caliburn.PresentationFramework"
             AutomationProperties.AutomationId="Collect">
    <DockPanel>
        <ContentControl Views:View.Model="{Binding Input}"
                        DockPanel.Dock="Top"
                        AutomationProperties.AutomationId="Input" />
        <ContentControl Views:View.Model="{Binding InboxActions}"
                        DockPanel.Dock="Bottom"
                        AutomationProperties.AutomationId="Actions" />
    </DockPanel>
</UserControl>